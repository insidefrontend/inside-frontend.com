mixin sessions(speaker)
  if speaker.solo
    li
      .session(id=speaker.session_anchor)
        .session-speaker
          .speaker
            .speaker-image
              img(src=speaker.image alt=`${speaker.name}の画像` loading='lazy')
            .speaker-body
              p.speaker-name= speaker.name
              p.speaker-title
                span.speaker-job= speaker.job
                span.speaker-org= `at ${speaker.org}`
              if speaker.twitter
                p.speaker-url
                  span Twitter:
                  a(href=`//twitter.com/${speaker.twitter}`)= speaker.twitter
              if speaker.github
                p.speaker-url
                  span GitHub:
                  a(href=`//github.com/${speaker.github}`)= speaker.github
        .session-body
          .session-title
            span= speaker.session_title
          .session-summary !{speaker.session_summary.replace(/\r?\n|\r/g,"<br>")}
            if speaker.slidoId
              .session-ama
                img(src=`https://chart.apis.google.com/chart?cht=qr&chs=480x480&chl=https://app2.sli.do/event/${speaker.slidoId}/live/questions`).session-amaQR
                a(href=`https://app2.sli.do/event/${speaker.slidoId}/live/questions` target="_blank" rel="noopener").session-ask.Ask
                  img(src="/src/assets/ask.svg" alt="")
                  span Ask the speaker

